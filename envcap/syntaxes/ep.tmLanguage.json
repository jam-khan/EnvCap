{
	"scopeName": "source.ep",
	"fileTypes": [".ep", ".epi"],
	"name": "ENCAP",
	"patterns": [
	  {
		"match": "\\b(if|then|else|let|letrec|in|val|function|module|struct|type|env|True|False|Sig|Int|Bool|String|match|of|case|with|as)\\b",
		"name": "keyword.control.encap"
	  },
	  {
		"match": "\\b(->|&|::|=>|\\+|-|\\*|/|%|>=|>|==|!=|<|<=|&&|\\|\\||,|;|:|\\[\\]|\\[|\\]|\\(|\\)|{|}|'|\"|,,|\\.)\\b",
		"name": "keyword.operator.encap"
	  },
	  {
		"match": "\\b([0-9]+)\\b",
		"name": "constant.numeric.encap"
	  },
	  {
		"match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\b",
		"name": "variable.encap"
	  },
	  {
		"begin": "\"",
		"end": "\"",
		"name": "string.quoted.double.encap"
	  },
	  {
		"begin": "'",
		"end": "'",
		"name": "string.quoted.single.encap"
	  },
	  {
		"begin": "--",
		"end": "$",
		"name": "comment.line.encap"
	  },
	  {
		"begin": "\\{-",
		"end": "-\\}",
		"name": "comment.block.encap"
	  }
	],
	"repository": {}
  }
  
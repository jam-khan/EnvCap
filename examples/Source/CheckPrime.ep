def n = 11;;

function isPrime(i : Int) {
    if (n < 2) 
        then { 0 }
        else {
            if ((i * i) > n) 
                then { 1 }
                else {
                    if (n % i == 0) 
                        then {
                            0
                        } else {
                            isPrime(i + 1)
                        }
                }
            }
};;

isPrime(11) == 1
